<div class="row">
    <div class="col-lg-5">
        <table border="1">
            <tr>
                <th>ニックネーム</th><td><%= @room.user.name %></td>
            </tr>
            <tr>
                <th>開催日時</th><td><%= @room.start_date %></td>
            </tr>
            <tr>
                <th>開催場所</th><td><%= @room.address %></td>
            </tr>
        </table>
    </div>
    <div class="col-lg-7">
        <div class="row chat-room">
            <h1>chat room</h1>
            <div id="messages" data-room_id="<%= @room.id %>">
                <%= render @messages %>
            </div>
        </div>
        <div class="row">
            <form class="form-inline">
                <div class="form-group">
                    <input type="text" name="content" class="form-control" id="chat-content" />
                    <!-- type="hidden"で隠せる。 -->
                    <!-- nameで値をラベル付けできる。 -->
                    <!-- valueに実際の値をいれる -->
                    <input type="hidden" name="userid" value=<%= current_user.id %> class="form-control" id="chat-user-id" />
                    <!-- roomidのはなし-->
                    <input type="hidden" name="roomid" value=<%= @room.id %> class="form-control" id="chat-room-id" />
                </div>
                <button id="button" class="btn-primary" >送信</button>
            </form>
        </div>
    </div>
</div>