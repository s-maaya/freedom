
<!-- %= をつけないときはeachとかの見た目に出さないやつ -->
<div class="row scroll">
        <% @rooms.each do |room| %>
                <!-- %= をつけるときは見た目に出すとき >-->
                <%= link_to room_path(room), class:'index-box index-list' do %>
                    --開催日時--<br>
                    <%= room.start_date %><br>
                    --開催場所--<br>
                    <%= room.address %><br>
                    --開催場所--<br>
                    <%= room.station %><br>
                    --タイトル--<br>
                    <%= room.title %><br>
                        <div class="mask">
                            <div class="caption"><%= room.details %></div>
                        </div>
                <% end %>
        <% end %>
</div>

