<!DOCTYPE html>
<html>
  <head>
    <title>Portfolio</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="https://kit.fontawesome.com/150fad54ca.js" crossorigin="anonymous"></script>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <div class="container-fluid">
      <div class="row content">
      <div class="col-lg-2 side sidenav hidden-xs">
        <div class="logo-icon">
          <h1><%= link_to "logo-e", root_path, class:"icon" %></h1>
        </div>
            <!--サイドメニューのリスト-->
            <div id="nav-list">
            <ul>
              <% if user_signed_in? %><!--ログイン状態のときに表示される-->
                <li class="header-icon">
                    <%= link_to new_room_path ,class:"item" do %>
                      <i class="fas fa-folder-plus fa-fx-3"><br>
                      New</i>
                    <%end%>
                </li>
                  <li class="header-icon">
                    <%= link_to user_path(current_user.id) ,class:"item" do %>
                      <i class="fas fa-user-alt fa-fx-3"><br>
                      My page</i>
                    <%end%>
                </li>
                  <li class="header-icon">
                    <%= link_to rooms_path ,class:"item" do %>
                      <i class="fas fa-th-large fa-fx-3"><br>
                      List</i>
                    <%end%>
                </li>
                  <li class="header-icon">
                    <%= link_to destroy_user_session_path, class:"item",method: :delete do %>
                      <i class="fas fa-sign-out-alt fa-fx-3"><br>
                      Log out</i>
                    <%end%>
                </li>
          <% else %>
              <!--ログアウト状態のときに表示される-->
                <li class="header-icon">
                  <%= link_to rooms_path ,class:"item" do %>
                    <i class="fas fa-th-large fa-fx-3"><br>
                    List</i>
                  <%end%>
                </li>
                <li class="header-icon">
                  <%= link_to new_user_registration_path ,class:"item" do %>
                    <i class="fas fa-user-plus fa-fx-3"><br>
                    Sign up</i>
                  <%end%>
                </li>
                  <li class="header-icon">
                  <%= link_to new_user_session_path ,class:"item" do %>
                    <i class="fas fa-sign-in-alt fa-fx-3"><br>
                    Log in</i>
                  <%end%>
                </li>
              <% end %>
            </ul>
        </div>
    </div>
    <div class="col-lg-10  got">
      <%= yield %>
    </div>
  </div>
  </div>
  </body>
</html>

