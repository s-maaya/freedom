          <h1><%= link_to "logo_enduser", root_path, class:"icon" %></h1>
        </div>
        <%
=begin%>
 </div> 
<%
=end%>
            <% if user_signed_in? %><!--ログイン状態のときに表示される-->
            <div class=" nav nav-pills nav-stacked">
              <div class="row header-icon">
                <div class="col-lg-12">
                  <%= link_to new_room_path do %>
                    新規投稿<i class="fas fa-folder-plus fa-fx-3"></i>
                  <%end%>
                </div>
              </div>
              <br>
              <div class="row">
              <div class="col-lg-12 header-icon">
                <%= link_to rooms_path do %>
                  投稿一覧<i class="fas fa-th-large fa-fx-3"></i>
                <%end%>
              </div>
              </div>
              <div class="row">
              <div class="col-lg-12 header-icon">
                <%= link_to destroy_user_session_path,  method: :delete do %>
