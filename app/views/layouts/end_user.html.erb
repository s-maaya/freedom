                <%end%>
              </div>
              </div>
        <% else %>
            <!--ログアウト状態のときに表示される-->
            <li class="header-icon">
              <%= link_to new_user_registration_path do %>
                user登録<i class="fas fa-user-plus fa-fx-3"></i>
              <%end%></li>
